<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/smoke_64a.png</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="18"/>
    <uniform name="lifetime" min="2" max="3"/>

    <constant name="position.y" value="0"/>

    <uniform name="angle" min="-3.14" max="3.14"/>

    <uniform name="velocity.x" min="-0.4" max="0.4"/>
    <uniform name="velocity.y" min="0.4" max="0.4"/>
    <uniform name="velocity.z" min="-0.4" max="0.4"/>
    <uniform name="velocity.angle" min="0" max="0"/>

    <uniform name="size" min="1.5" max="2"/>
	<constant name="size.growthRate" value="0.5"/>

    <uniform name="color.r" min="0" max="0.5"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
