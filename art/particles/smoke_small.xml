<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/smoke_128d_light.png</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="13"/>
    <uniform name="lifetime" min="0.7" max="1.5"/>

    <constant name="position.y" value="0"/>

    <uniform name="angle" min="-3.14" max="3.14"/>

    <uniform name="velocity.x" min="0" max="0"/>
    <uniform name="velocity.y" min="0.1" max="0.1"/>
    <uniform name="velocity.z" min="-0.1" max="0.1"/>
    <uniform name="velocity.angle" min="0" max="0"/>

    <uniform name="size" min="0.65" max="0.8"/>
	<constant name="size.growthRate" value="2"/>

    <uniform name="color.r" min="0" max="1"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
