<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/smoke_128b.png</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="14"/>
    <uniform name="lifetime" min="1.8" max="2.2"/>

    <constant name="position.y" value="0"/>

    <uniform name="angle" min="-3.14" max="3.14"/>

    <uniform name="velocity.x" min="-0.3" max="0.3"/>
    <uniform name="velocity.y" min="0.3" max="0.3"/>
    <uniform name="velocity.z" min="-0.3" max="0.3"/>
    <uniform name="velocity.angle" min="0" max="0"/>

    <uniform name="size" min="0.3" max="0.6"/>
	<constant name="size.growthRate" value="3"/>

    <uniform name="color.r" min="0" max="0.5"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
