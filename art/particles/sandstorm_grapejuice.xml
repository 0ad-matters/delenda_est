<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/smoke_256a.png</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="20.0"/>
    <uniform name="lifetime" min="10.0" max="15.0"/>

    <uniform name="position.x" min="-80.0" max="80.0"/>
    <uniform name="position.z" min="-80.0" max="80.0"/>
    <uniform name="position.y" min="0.5" max="2.0"/>

    <uniform name="angle" min="-3.14" max="3.14"/>

    <uniform name="velocity.x" min="-0.5" max="0.5"/>
    <uniform name="velocity.y" min="-0.5" max="1.5"/>
    <uniform name="velocity.z" min="-1.5" max="1.0"/>
    <uniform name="velocity.angle" min="-1.0" max="1.0"/>

    <uniform name="size" min="15" max="25"/>
	<constant name="size.growthRate" value="20"/>

    <force y="0.25"/>

    <uniform name="color.r" min="0.4" max="0.8"/>
    <uniform name="color.g" min="0.8" max="1"/>
    <uniform name="color.b" min="0" max="0"/>

</particles>
